package game.view.panels;

import game.CardCollection.CardPile;
import game.CardCollection.NotSupportedOperationException;
import game.Cards.EmptyCard;
import game.Player.Player;
import game.master.GameMaster;
import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Point;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.ImageIcon;


/**
 *
 * @author Dimitris
 */
public class CenterPanel extends javax.swing.JPanel {

    /**
     * Creates new form CenterPanel
     */
    private GameMaster game;
    private HorizontalViewCardPanel panel;
    private int playersCount = 0;
    private Player p;
    private PlayersPanel f;
    
    public CenterPanel(GameMaster _game , PlayersPanel theFrame) {
        initComponents();
        this.game = _game;
        f = theFrame;
        p = this.game.getFirstPlayer();
        panel = new HorizontalViewCardPanel(p, false);
        
        panel.setMaximumSize(new Dimension(400, 140));
        panel.setPreferredSize(new Dimension(400, 140));
        panel.setOrigin(new Point(100,0));
        panel.changeCurrentPlayerColor();
        this.jPanel1.setOpaque(false);
        this.jPanel1.setVisible(true);
        this.jPanel1.setLayout(new BorderLayout());
        this.jPanel1.add(panel,BorderLayout.CENTER);
        
        EmptyCard tmp = new EmptyCard();
        //ViewCard card = new ViewCard(tmp,new Point(10,10),false ? Direction.UP : Direction.DOWN,tmp.getImagePath());
        //this.add(card);
        CardPile tmp1 = new CardPile();
        try {
            tmp1.addCard(tmp);
        } catch (NotSupportedOperationException ex) {
            Logger.getLogger(CenterPanel.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        this.setCards(tmp1);
    }

    
    public void clearAll(){

    }
    
    @Override
    protected void paintComponent(Graphics g){
        super.paintComponent(g);
        ImageIcon back = new ImageIcon(getClass().getResource("/game/images/background.jpg"));
        g.drawImage(back.getImage(), 0, 0, this.getWidth(), this.getHeight(), this);
    }
    

    private void changeThePlayer(){
       
        this.jPanel1.removeAll();
        
        this.jPanel1.revalidate();
        this.jPanel1.repaint();
        
    }
    
    public void setCards(CardPile comb){
        System.out.println("set CARDS Center panel -> ");
        this.panel.setCards(comb);
    }
    
